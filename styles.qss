            /* ===== Weather-specific backgrounds with day/night ===== */

            /* Thunderstorm */
            QWidget#mainWindow[weather="Thunderstorm"][time="day"] {
                background: qlineargradient(x1:0,y1:0,x2:0,y2:1,
                    stop:0 #5a5a5e, stop:1 #262629);
            }
            QWidget#mainWindow[weather="Thunderstorm"][time="night"] {
                background: qlineargradient(x1:0,y1:0,x2:0,y2:1,
                    stop:0 #3e3e42, stop:1 #1b1b1f);
            }

            /* Drizzle */
