/* Common styles — Apple vibe */
QLabel, QPushButton {
    font-family: "SF Pro Text", "Helvetica Neue", Arial, sans-serif;
}

/* Default label color (day) scoped to the window) */
QWidget#mainWindow QLabel { color: #1c1c1e; }

/* Night override — keep this AFTER any other QLabel rules */
QWidget#mainWindow[time="night"] QLabel { color: #f5f5f7; }
QLabel#cityLabel {
    font-size: 40px;
    font-weight: 600;
    font-style: normal;
    letter-spacing: 0.3px;
}

QLineEdit#cityInput {
    font-size: 28px;
    padding: 10px 14px;
    border-radius: 10px;
    border: 1px solid rgba(0,0,0,0.15);
    background: rgba(255,255,255,0.9);
    selection-background-color: #007aff;
    selection-color: white;
}

/* Modern Apple-like button */
QPushButton#getWeatherButton {
    font-size: 24px;
    font-weight: 600;
    padding: 10px 20px;
    border-radius: 12px;
    background: qlineargradient(
        x1:0, y1:0, x2:0, y2:1,
        stop:0 #42a1ff,
        stop:1 #007aff
    );
    color: white;
    border: none;
}
QPushButton#getWeatherButton:hover {
    background: qlineargradient(
        x1:0, y1:0, x2:0, y2:1,
        stop:0 #53abff,
        stop:1 #198bff
    );
}
QPushButton#getWeatherButton:pressed {
    background: qlineargradient(
        x1:0, y1:0, x2:0, y2:1,
        stop:0 #007aff,
        stop:1 #006ae6
    );
}
QLabel#temperatureLabel {
    font-size: 70px;
    font-weight: 600;
}
QLabel#weatherEmojiLabel {
    font-size: 90px;
    font-family: 'Segoe UI Emoji', 'Apple Color Emoji';
}
